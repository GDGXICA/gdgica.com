---
const { name, logo, sector, description, eventsSponsored, sinceYear, website } =
  Astro.props;
---

<article
  class="flex flex-col gap-4 rounded-2xl border border-gray-200 p-6 shadow-sm"
>
  <img
    src={logo || "/placeholder.svg"}
    alt={`Logo ${name}`}
    class="mx-auto h-28 w-28 rounded-md object-contain"
    width={112}
    height={112}
    loading="lazy"
  />

  <div class="text-center">
    <h3 class="text-primary mb-1 text-lg font-semibold">{name}</h3>
    <p
      class="text-google-blue mb-3 text-xs font-medium tracking-wide uppercase"
    >
      {sector}
    </p>
    <p class="text-secondary mx-auto mb-4 line-clamp-5 text-sm">
      {description}
    </p>
  </div>

  <div
    class="mt-auto flex items-center justify-between gap-4 text-center text-xs"
  >
    <div class="flex flex-col">
      <span class="text-google-blue font-semibold">{eventsSponsored}</span>
      <span class="text-secondary">Eventos</span>
    </div>
    <div class="flex flex-col">
      <span class="text-google-green font-semibold">{sinceYear}</span>
      <span class="text-secondary">Desde</span>
    </div>
  </div>

  <div class="pt-4">
    <a
      href={website}
      target="_blank"
      rel="noopener noreferrer"
      class="text-primary hover:border-google-blue hover:text-google-blue inline-flex w-full items-center justify-center gap-2 rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium transition"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        class="h-4 w-4"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path
          d="M10.9 2.1c.4-.1.7-.1 1.1-.1 5.1 0 9.2 4.1 9.2 9.2s-4.1 9.2-9.2 9.2-9.2-4.1-9.2-9.2c0-.4 0-.7.1-1.1"
        ></path><path d="M2 12h20"></path><path
          d="M12 2c2.5 3.5 3.9 7.3 4 10-.1 2.7-1.5 6.5-4 10-2.5-3.5-3.9-7.3-4-10 .1-2.7 1.5-6.5 4-10Z"
        ></path></svg
      >
      Visitar Website
    </a>
  </div>
</article>
